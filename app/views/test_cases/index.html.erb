<%@test_cases.each do |test_case|%>
  <%=render partial: 'test_cases/short_test_case', :locals => {:test_case => test_case, :project => @project, :status_colors => @status_colors} %>
<%end%>
<%if User.current.allowed_to?(:edit_test_cases, @project)%>
  <%=link_to "Create Root of Test Case", new_test_case_path(project_id: @project.identifier)%>
<%end%>

<% content_for :header_tags do%>
  <%=stylesheet_link_tag("test_case", :plugin => "redmine_quality_assurance")%>
<% end %>

